@model MultiGame.Models.PostModels.PostCreate

@{
    ViewData["Title"] = "Create A Post";
}

<h1>Create A Post</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary = "ModelOnly" class = "text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <input type ="int" asp-for="PlayerId" class="form-control" placeholder="Ex: 5" />
                <span asp-validation-for= "PlayerId" class = "text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameTitle" class="control-label"></label>
                <input type ="text" asp-for="GameTitle" class="form-control" placeholder="Ex: CSGO 2" />
                <span asp-validation-for= "GameTitle" class = "text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeopleNeeded" class="control-label"></label>
                <input type="int" asp-for="PeopleNeeded" class="form-control" placeholder="Ex: 3" />
                <span asp-validation-for="PeopleNeeded" class = "text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input type="text" asp-for="Description" class="form-control" placeholder="Needing people for competitive. Must have Mic." />
                <span asp-validation-for="Description" class = "text-danger"></span>
            </div>
            <br />
            <hr />   
            <div class = "form-group">
                <input type = "submit" value = "Create" class="btn btn-warning" />
            </div>
        </form>
        <br />
        <div>
            <a asp-action = "Index" class="text-dark">Back To All Posts</a>
        </div>
    </div>
</div>