@model MultiGame.Models.FavoriteGameStatsModel

@{
    ViewData["Title"] = "Details";
}
<!DOCTYPE html>
<html>

<head>
    <title>Player Stats</title>
</head>

<body>
    <h1>Player Stats</h1>
    <dl>
        <dt>Player ID:</dt>
        <dd>@Model.PlayerId</dd>
        <dt>Username:</dt>
        <dd>@Model.Player.UserName</dd>
        <dt>Favorite Game:</dt>
        <dd>@Model.GameTitle</dd>
        <dt>Rank:</dt>
        <dd>@Model.Rank</dd>
        <dt>Hours:</dt>
        <dd>@Model.Hours</dd>
    </dl>


    <td>
        @Html.ActionLink("Back", "Index", "Player")
    </td>
</body>

</html>